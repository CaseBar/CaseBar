<!-- 註冊modal -->
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="signUpModal" role="dialog">
    <div class="modal-dialog">   
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" style="font-size:40px; color:red;">&times;</button>
          <div style="text-align:center;"><img class="login-bottle" src="logo/logo_new.png" /></div>
        </div>
        <div class="modal-body">
          <h2 class="login-title">新會員註冊</h2>
          <form id="signupForm" action="/signup" method="post" onSubmit="">
            <div class="form-group">
              <input type="text" name="realname" required class="form-control  input-frame" placeholder="姓名">
            </div>
            <div class="form-group">
              <input type="text" name="username" required class="form-control input-frame" placeholder="帳號(信箱)">
            </div>
            <div class="form-group">
              <input type="password" name="password" class="form-control input-frame" placeholder="密碼">
            </div>
            <div class="form-group">
              <input type="password" name="" required class="form-control input-frame" placeholder="確認密碼">
            </div>
            <div class="form-group">
              <input type="date" name="birthday" required class="form-control input-frame" placeholder="生日">
            </div>
            <div class="form-group">
              <input type="text" name="email" required class="form-control input-frame" placeholder="電子信箱">
            </div>
            <div class="checkbox" style="text-align:center;">
              <label style="font-size:8px; color:gray;"><input type="checkbox" value="" checked>Remember me</label>
            </div>
            <div style="text-align:center;">
              <button type="submit" class="login-btn">註冊</button>
              <a href="/auth/facebook"><button type=button class="login-fb"><span class="fa fa-facebook login-left"></span>以 Facebook 登入</button></a>
              <a href="/auth/google"><button type=button class="login-google"><span class="fa fa-google login-left"></span>以 Google 登入</button></a>
            </div>
          </form>
        </div>
        <div style="background-color: #f9f9f9" class="modal-footer">
          <p>已經註冊了? <a href="#">登入</a></p>
        </div>
      </div>
      
    </div>
  </div> 
</div>

