    <!-- 註冊modal -->
    <div class="container">
      <!-- Modal -->
      <div class="modal fade" id="signUpModal" role="dialog">
        <div class="modal-dialog">   
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header" style="padding:35px 50px; ">
            <label style="margin-top:10px; font-size:70px;color:#0000FF;"><span ><img class="col-md-6" src="logo2.png" style = "width:150px; height:auto"></span>CaseBar</label>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="background-color:#FF7F50; height:100%;">
              <p  style="font-size:30px; text-align:center; color:white; ">新會員註冊</p>
              <form id="signupForm" action="/signup" method="post" onSubmit="">
                <div class="form-group">
                  <input type="text" name="realname" required class="form-control" placeholder="姓名">
                </div>
                <div class="form-group">
                  <input type="text" name="username" required class="form-control" placeholder="帳號(信箱)">
                </div>
                <div class="form-group">
                  <input type="password" name="password" class="form-control" placeholder="密碼">
                </div>
                <div class="form-group">
                  <input type="password" name="" required class="form-control" placeholder="確認密碼">
                </div>
                <div class="form-group">
                  <input type="date" name="birthday" required class="form-control" placeholder="生日">
                </div>
                <div class="form-group">
                  <input type="text" name="email" required class="form-control" placeholder="電子信箱">
                </div>

                <div class="checkbox">
                  <label><input type="checkbox" value="" checked>Remember me</label>
                </div >
                  <button type="submit" style="text-align:center; margin-top:10px; border-color:white; width:100%; height: 50px;font-weight:bold; font-size: 20px; color:white;">註冊</button><br>
                  <button class="col-md-6" type="submit" style=" margin-top:10px; border-color:#4169E1; width:100%; height: 50px;font-weight:bold; font-size: 20px; background-color:#4169E1; color:white;"> <span><img class="col-md-6" src="facebook-modal.png" style = "height:25px;width:auto"></span>以facebook註冊</button><br>
                  <button class="col-md-6" type="submit" style=" margin-top:10px; border-color:#DC143C; width:100%; height: 50px;font-weight:bold; font-size: 20px; background-color:#DC143C; color:white;"> <span><img class="col-md-6" src="google-modal.png" style = "height:25px;width:auto"></span>以Google註冊</button>
              </form>
            </div>
            <div style="background-color: #f9f9f9" class="modal-footer">
              <p>已經註冊了? <a href="#">登入</a></p>
            </div>
          </div>
          
        </div>
      </div> 
    </div>

   <!-- 登入modal -->
